@using BannerDataDictionary.Models
@model IList<BannerDataDictionary.Models.LinkedServer>
           
@{
    ViewBag.Title = "Index";
}

@section subhead
{
    <h1>@ViewBag.Message</h1>

    <div>
        <p>A listing of Oracle Linked Servers</p>
    </div>
}

@section AdditionalScripts
{}
<div>
    <h3>Select a Linked Server to display a list of database owners (i.e., Schemas)</h3>
    <p>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Server Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Index", "Owners", new LinkedServer { Name = item.Name }, null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h3>Search All Linked Servers for specific keywords or text</h3>
    <p>
        @Html.ActionLink("Global Search Page", "Index", "Search", null, null)
    </p>
</div>